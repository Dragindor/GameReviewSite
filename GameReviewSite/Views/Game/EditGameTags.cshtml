@using GameReviewSite.Core.Models
@model List<AddTagToGame>
@{
    ViewData["Title"] = "Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Manage Tags</h2>
            Add/Remove Tags for Game / @ViewBag.Name.
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].Id" />
                    <input type="hidden" asp-for="@Model[i].Name" />
                    <input asp-for="@Model[i].Selected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].Selected">
                        @Model[i].Name
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <a asp-area="" asp-action="ManageGames" asp-controller="Game" asp-route-id="@ViewBag.gameId">
            <input  type="submit" value="Update" class="btn btn-primary" style="width:auto" />
            </a>
            <a asp-action="ManageGames" asp-route-id="@ViewBag.gameId"
               class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
</form>
