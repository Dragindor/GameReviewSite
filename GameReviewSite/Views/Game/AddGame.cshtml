@using GameReviewSite.Core.Models
@model AddGameViewModel
@{
	ViewData["Title"] = "Add Game";
	var Tags = (List<SelectListItem>)ViewBag.Tags;
}

<div class="container">
	<h1>@ViewData["Title"]</h1>

	<div class="col-md-4">
		<form id="registerForm" enctype="multipart/form-data" method="post">
			<hr />
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Name"></label>
				<input asp-for="Name" class="form-control" aria-required="true"/>
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="GamePicture"></label>
				<input asp-for="GamePicture" class="form-control" aria-required="true"/>
				<span asp-validation-for="GamePicture" class="text-danger"></span>
            </div>
			<div class="form-group">
				<label asp-for="Description"></label>
				<input asp-for="Description" class="form-control" aria-required="true"/>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="form-floating">
				<label asp-for="Price"></label>
				<input asp-for="Price" class="form-control"  aria-required="true" />
				<span asp-validation-for="Price" class="text-danger"></span>
			</div>
			<div class="form-floating">
				<label asp-for="Developer"></label>
				<input asp-for="Developer" class="form-control"  aria-required="true" />
				<span asp-validation-for="Developer" class="text-danger"></span>
			</div>
			<div class="form-floating">
				<label asp-for="Publisher"></label>
				<input asp-for="Publisher" class="form-control"  aria-required="true" />
				<span asp-validation-for="Publisher" class="text-danger"></span>
			</div>
			<div class="form-floating">
				<label asp-for="ReleaseDate"></label>
				<input asp-for="ReleaseDate" class="form-control"  aria-required="true" />
				<span asp-validation-for="ReleaseDate" class="text-danger"></span>
			</div>
			<div class="form-floating">
				<label asp-for="SystemRequirements"></label>
				<input asp-for="SystemRequirements" class="form-control"  aria-required="true" />
				<span asp-validation-for="SystemRequirements" class="text-danger"></span>
			</div>
			<div class="form-floating">
                <div class="form-group">
                    <label class="text-white">Tags</label>
                    <select asp-for="Tags" asp-items="@Tags" class="form-control">                       
                    </select>
                </div>
            </div>
			<br></br>
			<button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Add Game</button>
		</form>
	</div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
